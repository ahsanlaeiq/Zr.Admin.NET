{
  {
    // Interface request limiting
    "IpRateLimiting": {
      "EnableEndpointRateLimiting": true,
      "StackBlockedRequests": false,
      "RealIpHeader": "X-Real-IP",
      "ClientIdHeader": "X-ClientId",
      "HttpStatusCode": 429,
      "EndpointWhitelist": [ "post:/system/dict/data/types", "*:/msghub/negotiate", "*:/LogOut", "*:/common/uploadfile", "*:/VerifyScan" ],
      "QuotaExceededResponse": {
        "Content": "{{\"code\":429,\"msg\":\"Too many requests, please try again later\"}}",
        "ContentType": "application/json",
        "StatusCode": 429
      },
      // General rules, API rules, must end with *
      "GeneralRules": [
        {
          "Endpoint": "*:/captchaImage",
          // Time period, format: {number}{unit}; units: s, m, h, d
          "Period": "3s",
          "Limit": 5
        },
        {
          "Endpoint": "*:/checkMobile",
          // Time period, format: {number}{unit}; units: s, m, h, d
          "Period": "60s",
          "Limit": 1
        },
        {
          "Endpoint": "((post)|(put)):*",
          "Period": "3s",
          "Limit": 1
        }
      ]
    }
  }

}
